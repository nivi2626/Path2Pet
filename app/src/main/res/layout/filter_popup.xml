<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="Choose filters"
        android:textSize="25dp"
        android:textColor="@color/choose_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--status-->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:text="Choose pet type:"
        android:textSize="16dp"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_text" />

    <CheckBox
        android:id="@+id/foundFilter"
        android:text="Found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <CheckBox
        android:id="@+id/lostFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        app:layout_constraintStart_toEndOf="@id/foundFilter"/>

    <!--    pet type-->
    <TextView
        android:id="@+id/petType_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Pet Type:"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lostFilter" />

    <CheckBox
        android:id="@+id/dogFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Dog"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/petType_text"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/catFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cat"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/petType_text"
        app:layout_constraintStart_toEndOf="@id/dogFilter" />

    <!--    pet color-->
    <TextView
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Color:"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dogFilter" />

    <CheckBox
        android:id="@+id/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Black"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/blonde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blonde"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toEndOf="@id/black" />

    <CheckBox
        android:id="@+id/brown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brown"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toEndOf="@id/blonde" />

    <CheckBox
        android:id="@+id/ginger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ginger"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toEndOf="@id/brown" />

    <CheckBox
        android:id="@+id/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toEndOf="@id/ginger" />


    <!--    pet size-->
    <TextView
        android:id="@+id/size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Size:"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/black" />

    <CheckBox
        android:id="@+id/small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="small"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/size_text"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medium"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/size_text"
        app:layout_constraintStart_toEndOf="@id/black" />

    <CheckBox
        android:id="@+id/large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="large"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/size_text"
        app:layout_constraintStart_toEndOf="@id/blonde" />

    <!--    pet sex-->
    <TextView
        android:id="@+id/sex_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Sex:"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/small" />

    <CheckBox
        android:id="@+id/male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Male"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/sex_text"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/sex_text"
        app:layout_constraintStart_toEndOf="@id/black" />

    <!--    pet collar-->
    <TextView
        android:id="@+id/collar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="16dp"
        android:text="Collar:"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/male" />

    <CheckBox
        android:id="@+id/with_collar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="With"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/collar_text"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/without_collar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Without"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/collar_text"
        app:layout_constraintStart_toEndOf="@id/black" />


    <!--    filter button-->
    <Button
        android:id="@+id/filer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:fontFamily="sans-serif-light"
        android:backgroundTint="#A8A8A8"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>