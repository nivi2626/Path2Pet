<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostProcess.Fragment_a_Photo">

    <Button
        android:id="@+id/gallery_button"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="@color/logo_color"
        android:fontFamily="sans-serif-light"
        android:text="Choose From Gallery"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/previous"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/next_prev_color"
        android:text="@string/save_and_continue"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <Button
        android:id="@+id/previous"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/next_prev_color"
        android:fontFamily="sans-serif-light"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/place_holder"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/place_holder"
        app:layout_constraintBottom_toBottomOf="@+id/petImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--        app:sliderIndicatorUnselectedColor="#FFF"-->

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:visibility="invisible"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#E8E7E7"
        android:layout_marginTop="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/petImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>