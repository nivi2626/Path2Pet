<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="415dp"
        android:layout_height="50dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="#64BD73"
        android:fontFamily="sans-serif-light"
        android:text="Path2Pet"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/lost_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Lost Pet "
        android:fontFamily="sans-serif-light"
        android:backgroundTint="#46A556"
        android:layout_marginTop="200dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/found_pet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#46A556"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:text="Found Pet"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lost_pet" />

    <Button
        android:id="@+id/feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#64BD73"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="30dp"
        android:text="feed"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>