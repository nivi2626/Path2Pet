    <TextView
        android:id="@+id/with_or_without_collar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:text="With"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/date_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/collar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:text="collar"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/date_text"
        app:layout_constraintStart_toEndOf="@+id/with_or_without_collar" />

    <!--    comments-->
    <TextView
        android:id="@+id/comments_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Comments: "
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/collar_text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comments_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/collar_text"
        app:layout_constraintStart_toEndOf="@+id/comments_text" />


    <!-- close -->
    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#A8A8A8"
        android:fontFamily="sans-serif-light"
        android:text="close"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_edit" />

<!--    show details-->
    <Button
        android:id="@+id/show_details"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Reporter Details"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/comments_text"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!--    reporter name-->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Name: "
        android:textSize="18dp"
        android:visibility="invisible"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/comments_text"
        app:layout_constraintStart_toEndOf="@id/show_details" />

    <TextView
        android:id="@+id/name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="AAAAA"
        android:visibility="invisible"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/comments_text"
        app:layout_constraintStart_toEndOf="@+id/name_text" />

    <!--    reporter Email-->
    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Email: "
        android:textSize="18dp"
        android:visibility="invisible"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintStart_toEndOf="@id/show_details" />

    <TextView
        android:id="@+id/email_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="AAAAA"
        android:visibility="invisible"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintStart_toEndOf="@+id/email_text" />

    <!--    reporter phone-->
    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        android:text="Phone: "
        android:textSize="18dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        app:layout_constraintStart_toEndOf="@id/show_details" />

    <TextView
        android:id="@+id/phone_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:visibility="invisible"
        android:text="AAAAA"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        app:layout_constraintStart_toEndOf="@+id/phone_text" />





</androidx.constraintlayout.widget.ConstraintLayout>