<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/lost_or_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="found"
        android:layout_marginTop="10dp"
        android:textColor="@color/choose_color"
        android:textSize="30dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/imageSlider"
        android:visibility="invisible"
        android:layout_width="270dp"
        android:layout_height="270dp"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorSelectedColor="#5A5A5A"
        app:sliderIndicatorUnselectedColor="#E8E7E7"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/petImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lost_or_found"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_color"
        android:text="***TYPE***"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/imageSlider"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/breed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="***BREED***"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/type"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Unknown size"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/breed"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Unknown colors"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/size"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Unknown sex"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/colors"
        app:layout_constraintStart_toStartOf="parent" />

    <!--    comments-->
    <TextView
        android:id="@+id/comments_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Comments: "
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/comments_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms = "10"
        android:singleLine="false"
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:layout_constraintStart_toEndOf="@+id/comments_text" />



    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="***CITY***"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageSlider"
        app:layout_constraintStart_toStartOf="parent" />
    <!--report date-->
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_color"
        android:text="Date: "
        android:textSize="20dp"
        android:layout_marginStart="200dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/city"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/report_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/text_color"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/city"
        app:layout_constraintStart_toEndOf="@+id/date_text" />

    <TextView
        android:id="@+id/with_or_without_collar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:text="With"
        android:textColor="@color/text_color"
        android:textSize="20dp"
        android:layout_marginStart="200dp"
        app:layout_constraintTop_toBottomOf="@+id/report_date"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/collar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_color"
        android:fontFamily="sans-serif-light"
        android:text="collar"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/date_text"
        app:layout_constraintStart_toEndOf="@+id/with_or_without_collar" />

    <!-- close -->
    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#A8A8A8"
        android:fontFamily="sans-serif-light"
        android:text="close"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_edit" />

<!--    show details-->
    <Button
        android:id="@+id/show_details"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Reporter\nDetails"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/light_green"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/comments_text"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!--    reporter name-->
    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Name: "
        android:textSize="18dp"
        android:textColor="@color/text_color"
        android:visibility="invisible"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/comments_text"
        app:layout_constraintStart_toEndOf="@id/show_details" />

    <TextView
        android:id="@+id/name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="AAAAA"
        android:textColor="@color/text_color"
        android:visibility="invisible"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/comments_text"
        app:layout_constraintStart_toEndOf="@+id/name_text" />

    <!--    reporter Email-->
    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Email: "
        android:textColor="@color/text_color"
        android:textSize="18dp"
        android:visibility="invisible"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintStart_toEndOf="@id/show_details" />

    <TextView
        android:id="@+id/email_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="AAAAA"
        android:textColor="@color/text_color"
        android:visibility="invisible"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintStart_toEndOf="@+id/email_text" />

    <!--    reporter phone-->
    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:visibility="invisible"
        android:textColor="@color/text_color"
        android:text="Phone: "
        android:textSize="18dp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        app:layout_constraintStart_toEndOf="@id/show_details" />

    <TextView
        android:id="@+id/phone_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:visibility="invisible"
        android:textColor="@color/text_color"
        android:text="AAAAA"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        app:layout_constraintStart_toEndOf="@+id/phone_text" />





</androidx.constraintlayout.widget.ConstraintLayout>