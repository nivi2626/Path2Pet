<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoundProcess.Fragment_e_ColorCollar">

    <TextView
        android:id="@+id/color_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose color: "
        android:textColor="#252525"
        android:textSize="25dp"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBoxWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <CheckBox
        android:id="@+id/checkBoxBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toEndOf="@id/checkBoxBlond"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <CheckBox
        android:id="@+id/checkBoxGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gray"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/color_text"
        app:layout_constraintStart_toEndOf="@id/checkBoxBrown"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

    <CheckBox
        android:id="@+id/checkBoxBlond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:text="Blond"
        app:layout_constraintTop_toBottomOf="@id/checkBoxWhite"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        />

    <CheckBox
        android:id="@+id/checkBoxBrown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:text="Brown"
        app:layout_constraintTop_toBottomOf="@id/checkBoxWhite"
        app:layout_constraintStart_toEndOf="@id/checkBoxBlond"
        android:layout_marginStart="10dp"
        />

    <CheckBox
        android:id="@+id/checkBoxGinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="20dp"
        android:text="Ginger"
        app:layout_constraintTop_toBottomOf="@id/checkBoxWhite"
        app:layout_constraintStart_toEndOf="@id/checkBoxBrown"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:id="@+id/collar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Did the pet have a collar?"
        android:fontFamily="sans-serif-light"
        android:layout_marginLeft="20dp"
        android:textColor="#252525"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxBrown" />

    <Switch
        android:id="@+id/collar_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/collar"
        app:layout_constraintTop_toBottomOf="@id/checkBoxBrown" />


    <Button
        android:id="@+id/next"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/next_prev_color"
        android:text="@string/save_and_continue"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <Button
        android:id="@+id/previous"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:backgroundTint="@color/next_prev_color"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>